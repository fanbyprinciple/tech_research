{
    "manifest_version": 2,
    "name": "test",
    "version" : "1.0",
    "description": "test",
   
    "content_scripts": [{
       "matches":    ["<all_urls>"],
       "js":         ["content.js"]
    }],
   
    "background": {
       "scripts": ["background.js"]
    },
   
    "browser_action": {
       "default_icon": "icon.png"
    },
   
   "permissions": [
       "activeTab",
       "tabs",
       "storage",
       "http://*/*",
       "https://*/*"
    ]
   }